{{! community rating }}
<div class="community-rating">
  <div class="percentage-liked">
    <div class="featured-number">
      {{percentageLiked}}
    </div>
    <span>Liked it</span>
  </div>
  <div class="average-rating">
    <div class="featured-number">
      <label>{{decimal-number media.averageRating}}</label>
      {{! TODO/@vevix: Support any % on readonly }}
      {{star-rating media.averageRating readOnly=true}}
    </div>
    <span>Avg. user rating</span>
  </div>
</div>

{{#if (and entry (not (is-promise entry)))}}
  <div class="average-rating media-user-rating">
    <div class="personal-rating">
      <div class="featured-number">
        {{! user rating }}
        <label>{{decimal-number entry.rating}}</label>
        {{star-rating entry.rating onClick=(action "update")}}
      </div>
      <span>Your rating</span>
    </div>
  </div>
{{/if}}
