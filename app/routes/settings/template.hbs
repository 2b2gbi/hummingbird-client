<!-- Account Placeholder Functionality -->
<div class="row">
  <div class="col-xs-12">
    <form>
      <div class="form-group">
        <label for="username-input">Username</label>
        {{one-way-text user.name
          update=(action (mut user.name))
          id="username-input"
          class="form-control"
        }}
      </div>
      <div class="form-group">
        <label for="email-input">Email</label>
        {{one-way-email user.email
          update=(action (mut user.email))
          id="email-input"
          class="form-control"
        }}
      </div>
      <div class="form-group">
        <label for="password-input">New Password</label>
        {{one-way-password user.password
          update=(action (mut user.password))
          id="password-input"
          class="form-control"
        }}
      </div>
    </form>
  </div>

  <div class="col-xs-12">
    <button class="btn btn-primary" disabled={{unless user.hasDirtyAttributes "disabled"}} {{action (perform updateTask)}}>
      {{#if updateTask.isRunning}}
        Saving...
      {{else}}
        Save
      {{/if}}
    </button>
  </div>
</div>