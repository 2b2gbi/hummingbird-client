{{#if model}}
  <ul class="media-list">
    {{#each model as |review|}}
      {{media-review
        tagName="li"
        isUserFocused=true
        review=review
        media=media}}
    {{/each}}
  </ul>

  <div class="text-xs-center w-100">
    {{paginated-resource/infinite
      model=model
      update=(route-action "updateNextPage")
      loadingSize="large"
    }}
  </div>
{{else}}
  {{! TODO @Josh -- No reviews for this media }}
  <p>No reviews. [Placeholder]</p>
{{/if}}