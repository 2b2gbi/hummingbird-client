{{! Ratings }}
<section>
  {{media/media-rating
    entry=entry
    media=media
    update=(route-action "updateEntry" entry "rating")
  }}
</section>

{{! Synopsis }}
<section class="media-synopsis">
  <h5>Synopsis</h5>
  <p>{{text-clipper media.synopsis length=400}}</p>
</section>

{{! Reviews }}
<section>
  <h5>Popular Reviews</h5>
  {{#if reviews}}
    <ul class="media-list">
      {{! TODO: @Josh - 2x Popular Reviews - `/anime/sword-art-online` }}
      {{#each reviews as |review|}}
        <p>TODO - Placeholder</p>
      {{/each}}
    </ul>
  {{else}}
    {{! TODO @Josh -- empty state for no reviews on media page }}
    <p>No Reviews</p>
  {{/if}}
</section>

{{! Feed }}
<section>
  <h5>Community Feed</h5>
  {{stream-feed/list
    streamType="media_aggr"
    streamId=(concat (capitalize (model-type media)) "-" media.id)
    readOnly=(not session.hasUser)
    media=media
  }}
</section>
