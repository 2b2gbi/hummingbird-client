<div class="media-left">
  <a href={{href-to "users.index" comment.user.name}}>
    <img class="media-object" src={{image comment.user.avatar}}>
  </a>
</div>
<div class="media-body">
  <h4 class="media-heading">
    {{comment.user.name}}
    <small class="comment-time">
      {{moment-from-now comment.createdAt}}
    </small>
  </h4>
  <p>
    {{#if comment.isNew}}
      {{loading-spinner}}
    {{else}}
      {{{comment.contentFormatted}}}
    {{/if}}
  </p>
  <div class="stream-item-activity">
    <!-- NYI on API -->
    <a href="#" class="like-stream-item">
      {{svg-jar "heart-filled"}}
      <span class="sm-comment-count">3</span>
    </a>
    <span class="more-wrapper">
      <a href="#" class="more-drop" id="moreDrop" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{svg-jar "more"}}
      </a>
      <div class="dropdown-menu" aria-labelledby="moreDrop">
        <a class="dropdown-item" href="#">Report Post</a>
        <a class="dropdown-item" href="#">Mute @{{comment.user.name}}</a>
        <a class="dropdown-item" href="#">Block @{{comment.user.name}}</a>
      </div>
    </span>
  </div>
</div>