<div class="library-entry container" data-test-selector="library-entry">
  <div class="entry-wrapper row">
    {{! Entry Title }}
    <div class="col-md-7 entry-left">
      <div class="entry-title" data-test-selector="library-entry-title">
        <span>{{media.canonicalTitle}}</span>
      </div>
    </div>

    <div class="col-md-5 entry-right">
      {{! Entry Progress }}
      <div class="entry-progress">
        {{#if isOwner}}
          {{one-way-number entry.progress
            update=(queue
              (action "update" "progress")
              (perform saveEntryDebounced)
            )
            sanitizeInput=(action "sanitizeNumber")
            placeholder="0"
          }}
          <span>
            <span class="sep">/</span>
            {{totalProgressText}}
          </span>
        {{else}}
          <span>
            {{entry.progress}} / {{totalProgressText}}
          </span>
        {{/if}}
      </div>

      {{! Entry Rating }}
      <div class="entry-rating">
        <span>{{ratingText}}</span>
      </div>

      {{! Entry Type }}
      <div class="entry-type">
        <span>{{typeText}}</span>
      </div>
    </div>
  </div>

  {{! Expanded Info }}
  {{#if isExpanded}}
    <div class="library-dropdown row">
      <div class="col-sm-12 arrow-wrapper">
        <div class="drop-arrow"></div>
      </div>

      {{! Poster Image }}
      <div class="col-md-2 columns">
        <img class="drop-thumb" src={{image media.posterImage}}>
      </div>

      {{! Media Info }}
      <div class="col-md-6 columns no-padding-left">
        <h4 class="drop-title">
          <a href={{href-to (concat mediaType ".show") media}}>
            {{media.canonicalTitle}}
          </a>
        </h4>
        <p class="drop-description">
          {{media.synopsis}}
        </p>
        <div class="entry-notes">
          {{#if isOwner}}
            {{one-way-text entry.notes
              update=(queue
                (action "update" "notes")
                (perform saveEntryDebounced)
              )
              placeholder=(t "users.library.notes" title=media.canonicalTitle)
              class="personal-notes"
            }}
          {{else}} {{! Only show if the user has notes }}
            {{#if entry.notes}}
              {{one-way-text entry.notes
                  class="personal-notes"
                  readonly=true}}
            {{/if}}
          {{/if}}
        </div>
      </div>

      {{! Options }}
      <div class="col-md-4 columns">
        <div class="drop-options">
          {{#if isOwner}}
            {{! Library Status }}
            <div class="status-select">
              {{library-dropdown/entry
                entry=entry
                update=(queue
                  (action "updateStatus")
                  (perform saveEntry)
                )
                delete=(action "delete")
              }}
            </div>
          {{/if}}

          <div class="dropdown-rating">
            {{! Privacy }}
            {{#if isOwner}}
              {{#bootstrap/bs-dropdown as |dropdown|}}
                {{#dropdown.button}}
                  {{if entry.private (t "users.library.private") (t "users.library.public")}}
                {{/dropdown.button}}
                {{#dropdown.menu}}
                  {{#dropdown.menu-item
                    onClick=(queue
                      (action "update" "private" (not entry.private))
                      (perform saveEntry)
                    )
                  }}
                    {{if entry.private (t "users.library.public") (t "users.library.private")}}
                  {{/dropdown.menu-item}}
                {{/dropdown.menu}}
              {{/bootstrap/bs-dropdown}}
            {{/if}}

            {{! Rating }}
            <div class="rating-options">
              {{star-rating entry.rating
                readOnly=(not isOwner)
                onClick=(queue
                  (action "update" "rating")
                  (perform saveEntry)
                )
              }}
            </div>
          </div>

          {{! Rewatch }}
          <div class="rewatch">
            {{#if isOwner}}
              <button type="button" class="button" {{action (queue
                (action "update" "reconsumeCount" (inc entry.reconsumeCount))
                (action "update" "progress" 0)
                (action "update" "status" "current")
                (perform saveEntry))}}>
                {{t "users.library.rewatch"}}
              </button>
            {{/if}}

            <label>
              <span>{{t "users.library.rewatched"}}</span>
              {{#if isOwner}}
                {{one-way-number entry.reconsumeCount
                  update=(queue
                    (action "update" "reconsumeCount")
                    (perform saveEntryDebounced)
                  )
                  sanitizeInput=(action "sanitizeNumber")
                }}
              {{else}}
                <span>{{entry.reconsumeCount}}</span>
              {{/if}}
              <span>{{t "users.library.times"}}</span>
            </label>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
</div>
