<button class="button button--primary" data-test-selector="follow-button" {{action (perform toggle)}}>
  {{#if (or prepare.isRunning toggle.isRunning)}}
      {{loading-spinner}}
  {{else}}
    {{#if following}}
      <span class="button-label">{{t "users.unfollow"}}</span>
    {{else}}
      <span class="button-label">{{t "users.follow"}}</span>
    {{/if}}
  {{/if}}
</button>
