<div class="section-head" data-test-selector="library-entries">
  <span class="section-title">{{statusName}}</span>
  <span class="section-stats" data-test-selector="library-entries-stats">{{stats}}</span>
</div>

{{#if isLoading}}
  <div class="empty-wrapper p-t-1 p-b-1">
    {{loading-spinner}}
  </div>
{{else}}
  {{#each entries as |entry|}}
    {{users/components/library-entry
      entry=entry
      save=(action "save" entry)
      delete=(action "delete" entry)
    }}
  {{else}}
    <div class="empty-wrapper">
      <div class="library-section-empty">
        <span>
          {{#if isOwner}}
            {{t "users.library.emptyOwner" link=(create-link (t "users.library.browse" type=(capitalize mediaType)) (concat mediaType ".index"))}}
          {{else}}
            {{t "users.library.emptyGuest" user=user.name}}
          {{/if}}
        </span>
      </div>
    </div>
  {{/each}}
{{/if}}
