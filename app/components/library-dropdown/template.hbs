{{#bootstrap/bs-dropdown as |dropdown|}}
  {{#dropdown.button disabled=(if isWaiting "disabled") data-test-selector="library-dropdown"}}
    {{#if isWaiting}}
      {{fa-icon "spinner" spin=true}}
    {{else}}
      {{#if entry}}
        {{currentStatus}}
      {{else}}
        Add to Library
      {{/if}}
    {{/if}}
  {{/dropdown.button}}

  {{#dropdown.menu}}
    {{#each statuses as |status|}}
      {{#dropdown.menu-item data-test-selector="library-dropdown-item" onClick=(perform updateTask status)}}
        {{status.string}}
      {{/dropdown.menu-item}}
    {{/each}}
  {{/dropdown.menu}}
{{/bootstrap/bs-dropdown}}