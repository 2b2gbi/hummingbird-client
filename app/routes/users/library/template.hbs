<div class="container">
  <div class="row">
    <div class="library-list col-sm-12">
      <div class="nav-wrapper">
        {{! Library type dropdown }}
        {{#bootstrap/bs-dropdown as |dropdown|}}
          {{#dropdown.button class="button--dark-outline button--small"}}
            {{t "users.library.library" type=(t (concat "media." media ".name"))}}
          {{/dropdown.button}}
          {{#dropdown.menu}}
            {{#each mediaList as |_media|}}
              {{#dropdown.menu-item onClick=(route-action "updateMedia" _media)}}
                {{t "users.library.library" type=(t (concat "media." _media ".name"))}}
              {{/dropdown.menu-item}}
            {{/each}}
          {{/dropdown.menu}}
        {{/bootstrap/bs-dropdown}}

        {{! Library status selection }}
        <div class="library-status">
          <div class="btn-group" role="group" aria-label="Library Status">
            <button type="button" class="btn btn-secondary">All</button>
            <button type="button" class="btn btn-secondary">Current</button>
            <button type="button" class="btn btn-secondary">Planned</button>
            <button type="button" class="btn btn-secondary">Completed</button>
            <button type="button" class="btn btn-secondary">Stalled</button>
            <button type="button" class="btn btn-secondary">Dropped</button>
          </div>
        </div>
        <!-- <ul class="menu">
          {{#each statuses as |_status|}}
            {{users/components/library-select
              status=_status
              mediaType=media
              isActive=(eq _status status)
              isLoading=isLoading
              onClick=(action (mut status))
            }}
          {{/each}}
        </ul> -->
      </div>

      {{! Filter Search }}
      {{! @TODO: API is not yet searchable }}
      <!-- <div class="search-library">
        {{one-way-search
            class="search-input"
            placeholder=(t "users.library.search")}}
      </div> -->

      {{! Library Entries }}
      {{#if (eq status 'all')}} {{! all status is selected }}
        {{#each-in sections as |status entries|}}
          {{#if entries}}
            {{users/components/library-entries
              status=status
              entries=entries
              mediaType=media
              isLoading=isLoading
              update=(route-action "updateEntry")
              delete=(route-action "deleteEntry")
            }}
          {{/if}}
        {{/each-in}}
      {{else}} {{! active tab entires }}
        {{users/components/library-entries
          status=status
          entries=filteredEntries
          mediaType=media
          isLoading=isLoading
          update=(route-action "updateEntry")
          delete=(route-action "deleteEntry")
        }}
      {{/if}}

      {{! pagination }}
      {{pagination-scrolling
        model=entries
        update=(route-action "updateNextPage")
        tolerance=(hash top=0 left=0 bottom=100 right=0)
      }}
    </div>
  </div>
</div>
